<% provide(:title, @user.username) %>

<div class="row"> 
  <aside class="col-md-4"> 
    <section class="user_info"> 
      <h1> 
        <%= gravatar_for @user %> 
        <%= @user.display_name %>
      </h1>
      <h3>
        @<%= @user.username %>
      </h3>
    </section> 
  </aside>
  <div class="col-md-4">
    <% if @user.tweets.any? %>
      <h3>Tweets (<%= @user.tweets.count %>)</h3>
      
      <ol class="microposts">
        <%= render @tweets %>
      </ol>
      <%= will_paginate @tweets %>
    <% end %>
  </div>
</div>